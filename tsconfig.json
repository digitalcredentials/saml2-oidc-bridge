{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": ["@types", "./node_modules/@types", "./lib/types"],
    "resolveJsonModule": true,
  },
  "files": [
    "lib/index.ts",
  ],
  "ts-node": {
    "files": true,
  },
  "include": ["./lib/**/*"]
}
